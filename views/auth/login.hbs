<div class="login">

  <section class="form-login">
    <h2>Inicia sesión</h2>

    <form action="/login" method="POST" id="form-container">
      <label for="username">Username</label> <br>
      <input id="username" type="text" name="username" placeholder="JonSnow">

      <br><br>

      <label for="password">Contraseña</label> <br>
      <input id="password" type="password" name="password" placeholder="Tu contraseña">
      <br>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <br>

      <button class="btn btn-outline-dark">Acceder</button>
      <br><br>
      <p class="account-message">
        ¿Aún no tienes cuenta?
        <a href="/signup">Regístrate</a>
      </p>
    </form>
  </section>
</div>

