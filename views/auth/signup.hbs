<h2>Signup</h2>

<form action="/signup" method="POST" id="form-container">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow">

  <br><br>

  <label for="email">Email</label>
  <input id="email" type="email" name="email" placeholder="JonSnow@gmail.com">

  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br><br>
  <label for="localization">Localization</label>
  <select name="localization" id="airport">
    <option value="MAD">Madrid</option>
    <option value="BCN">Barcelona</option>
    <option value="VLC">Valencia</option>
    <option value="SCQ">Santiago</option>
    <option value="SVQ">Sevilla</option>
  </select>
  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button class="btn btn-outline-dark">Create account</button>
  <br><br>
  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>