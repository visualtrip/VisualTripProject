<header><video autoplay loop muted></video></header>


<article class="first-article">
  <h6>Welcome to {{title}}</h6>
  <p><i>Choose a picture, discover it's location and get ready to plan your trip</i></p>
</article>

<div class="filters">
  <a href="/category/naturaleza" role="button" class="btn btn-outline-dark" id="nat">Naturaleza</a>
  <a href="/category/ciudad" role="button" class="btn btn-outline-dark">Ciudad</a>
  <a href="/category/playa" role="button" class="btn btn-outline-dark">Playa</a>
</div>

<div class="filters">
  <a href="/category/gastronomia" role="button" class="btn btn-outline-dark">Gastro</a>
  <a href="/category/cultural" role="button" class="btn btn-outline-dark">Cultural</a>
  <a href="/category/sorpresa" role="button" class="btn btn-outline-dark">Sorpresa</a>
</div>

<div class="container-fluid">
  <div class="row ">
    {{#each places}}
    <figure class="col-6 images">
      <a href="/place/{{_id}}"><img class="index-images" src="{{url}}" id="{{name}}"></a>
    </figure>
    {{/each}}
  </div>
</div>